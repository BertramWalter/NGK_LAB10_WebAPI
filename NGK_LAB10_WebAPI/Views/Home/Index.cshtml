    $(function() {
        var connection = $.hubConnection();
        var hub = connection.createHubProxy('WeatherHub');
        hub.on('hello',
            function(greeting) {
                alert(greeting);
            });
        connection.start().done(function() {
            hub.invoke('sayHello');
        })
    })
</script>
